{
    "name": "ajaxcrud/ajaxcrud",
    "description": "Lightweight PHP library for inline-editable AJAX CRUD tables with auth, RLS, audit logs, and REST API",
    "version": "7.1.0",
    "type": "library",
    "keywords": [
        "crud",
        "ajax",
        "inline-editing",
        "database",
        "rest-api",
        "rbac",
        "audit-log",
        "row-level-security",
        "php"
    ],
    "homepage": "https://github.com/metazen11/ajaxCRUD",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Loud Canvas Media",
            "email": "arts@loudcanvas.com",
            "homepage": "http://www.loudcanvas.com"
        },
        {
            "name": "metazen11",
            "role": "Maintainer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "classmap": [
            "ajaxCRUD.class.php",
            "Auth.class.php",
            "RLS.class.php",
            "AuditLog.class.php",
            "API.class.php"
        ],
        "files": [
            "preheader.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "demo": [
            "echo 'Starting demo server...'",
            "php -S localhost:8000 -t examples"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "support": {
        "issues": "https://github.com/metazen11/ajaxCRUD/issues",
        "source": "https://github.com/metazen11/ajaxCRUD"
    },
    "suggest": {
        "ext-mysqli": "For MySQL support",
        "ext-pgsql": "For PostgreSQL support",
        "ext-sqlite3": "For SQLite support"
    }
}
